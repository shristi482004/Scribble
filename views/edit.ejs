<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Note</title>

  <script src="https://cdn.tailwindcss.com"></script>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Poppins', sans-serif;
    }

    .bg-cream {
      background: linear-gradient(135deg,
        #FFF6CC 0%,
        #E6E6FA 30%,
        #FFD6E0 60%,
        #D4F1F4 100%
      );
    }

    .glass {
      background: rgba(255,255,255,0.85);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255,255,255,0.5);
    }

    .text-shadow {
      text-shadow: 2px 2px 4px rgba(0,0,0,0.12);
    }
  </style>
</head>

<body class="bg-cream min-h-screen flex items-center justify-center px-6">

  <div class="max-w-xl w-full glass rounded-[3rem] p-12 shadow-2xl">

    <!-- Back -->
    <a href="/" class="text-sm text-gray-600 hover:text-gray-900 transition mb-8 inline-block">
      ‚Üê Back
    </a>

    <!-- Heading -->
    <h1 class="text-4xl font-extrabold text-gray-800 mb-10 text-shadow">
      Edit Task Name
    </h1>
<% 
  const displayName = prevname
    .replace(/\.txt$/, '')
    .replace(/_/g, ' ')
    .replace(/\b\w/g, c => c.toUpperCase());
%>
    <!-- Form -->
    <form action="/edit/<%= prevname %>" method="POST" class="space-y-6">

      <!-- OLD NAME (READ ONLY) -->
      <div>
        <label class="block text-sm font-semibold text-gray-500 mb-2 " ">
          Current name
        </label>

        <input
        name="prevname"
          type="text"
            value="<%= displayName %>"
          
          class="w-full px-6 py-4 rounded-2xl
                 bg-gray-100 text-gray-400
                 cursor-not-allowed
                 border border-gray-200"
        />
      </div>

      <!-- NEW NAME -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-2">
          New name
        </label>

        <input
          type="text"
          name="newName"
          placeholder="Enter new task name"
          required
          class="w-full px-6 py-4 rounded-2xl
                 bg-white/80
                 border border-gray-200
                 text-gray-800
                 focus:outline-none focus:ring-2 focus:ring-emerald-300
                 transition"
        />
      </div>

      <!-- SUBMIT -->
      <button
        type="submit"
        class="w-full mt-4 py-4 rounded-2xl
               bg-gradient-to-r from-emerald-400 to-teal-400
               text-white font-bold text-lg
               shadow-xl
               hover:scale-105 hover:shadow-emerald-300/50
               transition-all"
      >
        Save Changes
      </button>

    </form>

  </div>

</body>
</html>
